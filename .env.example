# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Security Settings
SECRET_KEY=<YOUR_SECRET_KEY_HERE_32_CHARS_MIN>
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=content_repurpose
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres_dev_password

# Database URLs (optional - will be constructed from above if not provided)
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5433/content_repurpose
# DATABASE_URL_SYNC=postgresql+psycopg2://postgres:password@localhost:5433/content_repurpose

# Admin Interface Access
PGADMIN_EMAIL=admin@localhost.dev
PGADMIN_PASSWORD=admin_dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# AI Provider Configuration (Enterprise Multi-Provider Support)
AI_PROVIDER=openai  # Options: openai, anthropic, azure, local
DEFAULT_AI_MODEL=gpt-4o-mini  # or gpt-4, claude-3-sonnet, etc.

# AI API Keys (configure based on your chosen provider)
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY_HERE>
CLAUDE_API_KEY=<YOUR_CLAUDE_API_KEY_HERE>
AZURE_OPENAI_API_KEY=<YOUR_AZURE_OPENAI_KEY_HERE>
AZURE_OPENAI_ENDPOINT=<YOUR_AZURE_ENDPOINT_HERE>

# AI Request Configuration
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# File Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=52428800

# Rate Limiting
RATE_LIMIT_AUTH_ATTEMPTS=5/15m
RATE_LIMIT_API_CALLS=100/1m
RATE_LIMIT_TRANSFORMATIONS=30/1h

# Security Settings
PASSWORD_MIN_LENGTH=12
BCRYPT_ROUNDS=12

# Environment
ENVIRONMENT=development
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
