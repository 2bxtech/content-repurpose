# Security Configuration (REQUIRED)
SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production
CLAUDE_API_KEY=your-anthropic-claude-api-key-here

# Database Configuration
DATABASE_URL=postgresql+asyncpg://content_user:secure_password@localhost:5432/content_repurpose

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=12
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_AUTH_ATTEMPTS=5/15m
RATE_LIMIT_API_CALLS=100/1m
RATE_LIMIT_TRANSFORMATIONS=30/1h

# File Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=52428800

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000